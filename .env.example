# ===========================================
# DTH Store Website - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# GEMINI AI (Optional - for AI Sales Assistant)
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# FIREBASE AUTHENTICATION (Optional)
# ===========================================
# Get these from Firebase Console > Project Settings > Your Apps > Web App
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# Comma-separated list of admin email addresses
VITE_ADMIN_EMAILS=admin@dthstore.shop,your-email@example.com

# ===========================================
# DEMO MODE (for testing without Firebase)
# ===========================================
# Set to 'true' to enable demo login (admin/123, staff/123)
# Set to 'false' in production with Firebase configured
VITE_DEMO_MODE=true

# ===========================================
# API CONFIGURATION
# ===========================================
# Base URL for your WhatsApp API server (if using)
VITE_WHATSAPP_API_URL=http://your-ec2-ip:3000

# ===========================================
# NOTES
# ===========================================
# - Variables prefixed with VITE_ are exposed to the frontend
# - For Hostinger deployment, these are baked into the build
# - Run 'npm run build' after changing environment variables
